{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/tests/**/*.ts", "@types/*.d.ts"],
  "exclude": ["node_modules"]
}